---
import Container from "./Container.astro";

interface Props{
    dark? : boolean ;
}

const {dark=false} = Astro.props;
---


<section class={dark ? 'dark': ''}>
    <Container>
        <slot/>
    </Container>
</section>


<style>
    section{
        padding: 80px 0;

        &.dark{
            background: var(--secondary);
            /* background: var(--primary); */
        }

        @media (max-width: 1000px){
            &{
                padding:48px 0;
            }
            }
    }

</style>